<header>

  <div class="centrar">
    <div class="logo">
        <%=image_tag("uni.png")%>
    </div>
    <nav>

          <a href="#">Inicio</a>
          <a href="#">Información</a>
          <a href="#">Libros Digitales</a>
          <a href="#">Contacto</a>

      </nav>
  </div>
</header>
<body>
  <div class="contenedor">
    <center><h1 >Universidad Nacional de Ingeniera</h1></center>
    <h1>Libros Generales</h1>
    <div class="div_tabla">
      <table>
        <thead>

          <tr>
            <th >Autor</th>
            <th >Título</th>
            <th >Descripción</th>
            <th >Opciones Genrales</th>
            <th</th>
            <th</th>
          </tr>
        </thead>
    </div>


      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.author %></td>
            <td><%= book.title %></td>
            <td><%= book.description %></td>
            <td>
              <%= link_to 'Mostrar', book %>
              <%= link_to 'Editar', edit_book_path(book) %>
              <%= link_to 'Eliminar', book, method: :delete, data: { confirm: 'Esta seguro que desea borrar el registro?' } %>
            </td>

          </tr>
        <% end %>
      </tbody>
    </table>

  </div>

</body>

